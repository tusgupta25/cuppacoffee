@model CuppaCoffee.customer
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*<h2>Login</h2>*@
    
        

        <table class="loginpagetable" >
            <tr>
                <td>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken() // this is for prevent CSRF attack
                        @Html.ValidationSummary(true)
                        <table id="logindetails" class="logindetails">

                            <tr>
                                <td>
                                    @Html.LabelFor(a => a.customer_email, "Email", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(a => a.customer_email)
                                    @*<input id="loginID" type="email" placeholder="Your email ID" />*@
                                </td>
                                @*<td>@Html.ValidationMessageFor(a => a.customer_email)</td>*@
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(a => a.customer_password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                                    @*<text>Password</text>*@
                                </td>
                                <td>
                                    @Html.PasswordFor(a => a.customer_password)
                                </td>
                                @*<td>
                        @Html.ValidationMessageFor(a => a.customer_password)
                    </td>*@
                            </tr>
                            <tr>
                                <td colspan="2" id="buttonthings">
                                    <center><input type="submit" name="Log In" value="Log In" /></center>
                                </td>
                            </tr>
                        </table>
                    }
                    </td>
                <td colspan="2">
                    <pre><strong>Howdy!

        Welcome y'all.
        Choose your section.
                    </strong></pre>
                    <img src="~/images/mascot.png" width="100vw"/>
                </td>

                <td>
                    @using (Html.BeginForm("Login", "Home", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken() // this is for prevent CSRF attack
                        @Html.ValidationSummary(true)
                        <table id="signupsheet" class="logindetails">

                            <tr>
                                <td colspan="5">
                                    <text>Not signed up yet? No problem, tell us about yourself!</text>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(b => b.customer_firstname, "Firstname", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(b => b.customer_firstname)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(b => b.customer_lastname, "Lastname", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(b => b.customer_lastname)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <text id="">Gender</text>
                                </td>
                                <td>
                                    <input id="genderbox" placeholder="male/female" />
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(b => b.customer_DOB, "DOB", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(b => b.customer_DOB)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(b => b.customer_email, "EmailID", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    @Html.TextBoxFor(b => b.customer_email)
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    @Html.LabelFor(b => b.customer_password, "Password", htmlAttributes: new { @class = "control-label col-md-2" })
                                </td>
                                <td>
                                    @Html.PasswordFor(b => b.customer_password)
                                </td>
                            </tr>
                            <tr>
                                <td colspan="2">
                                    <center><input type="submit" name="Register" value="Register" /></center>
                                    @ViewBag.Message
                                </td>
                            </tr>
                        </table>
                    }
               
                </td>
            </tr>
        </table>


